# Adamus Resources Limited - Intranet Configuration
# Copy this file to .env and fill in the values

# App
VITE_APP_NAME="ARL Connect"
VITE_APP_URL="http://localhost:5173"

# Database (MongoDB)
MONGODB_URI="mongodb://localhost:27017/arl_intranet"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="8h"
JWT_REFRESH_EXPIRES_IN="7d"

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# SMS Provider (Africa's Talking / Twilio)
SMS_PROVIDER="africastalking"
SMS_API_KEY=""
SMS_USERNAME=""

# Claude AI (Anthropic)
ANTHROPIC_API_KEY=""

# File Upload
MAX_FILE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100
UPLOAD_DIR="./uploads"

# Gold News RSS Feeds
GOLD_NEWS_RSS_GHANA="https://example.com/ghana-gold-rss"
